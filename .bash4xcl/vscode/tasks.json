{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "inputs": [
        {
            "id": "applicationIDs",
            "description": "Verfügbare Applikationen",
            "type": "pickString",
            "default": "", // $DEFAULT_APP_ID
            "options": [] // $ARRAY_OF_AVAILABLE_APP_IDS
        }
    ],
    "tasks": [
        {
            "label": "Start SQLcl",
            "type": "shell",
            "command": "bash",
            "args": [
                ".bash4xcl/vscode/start_sqlcl.sh",
                "\"${relativeFile}\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Export - Exportieren der ausgewählten APEX Application",
            "type": "shell",
            "command": "bash",
            "args": [
                ".bash4xcl/vscode/export_app.sh",
                "${input:applicationIDs}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build - Kompilieren/Upload der aktuellen Datei",
            "type": "shell",
            "command": "bash",
            "args": [
                ".bash4xcl/vscode/deploy_file.sh",
                "\"${relativeFile}\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ],
                "pattern": [
                    {
                        "regexp": "(.*) (\\d*)/(\\d*) (.*?) (.*)",
                        "severity": 1,
                        "line": 2,
                        "column": 3,
                        "file": 4,
                        "message": 5,
                        "loop": true
                    }
                ]
            }
        },

    ]
}