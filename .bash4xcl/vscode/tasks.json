{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",    
    "tasks": [        
        {
            "label": "Build - Kompilieren/Upload der aktuellen Datei",
            "type": "shell",
            "command": "bash",
            "args": [
                ".vscode/deploy_file.sh",
                "\"${relativeFile}\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ],
                "pattern": [
                    {
                        "regexp": "(.*) (\\d*)/(\\d*) (.*?) (.*)",
                        "severity": 1,
                        "line": 2,
                        "column": 3,
                        "file": 4,
                        "message": 5,
                        "loop": true
                    }
                ]
            }
        }
    ]
}